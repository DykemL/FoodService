@model FoodService.Models.DtoModels.LoginDtoModel
@{
    ViewBag.Title = "Вход";
}
<link rel="stylesheet" href="~/css/account.css" />
<div class="d-flex justify-content-center">
    <div class="col-lg-3">
        <div class="h4 mb-4">Вход</div>
        @if (ViewData.ModelState.Count > 0)
        {
            @Html.ValidationSummary(false, "", new { @class = "alert alert-danger" })
        }
        <form asp-controller="Account" asp-action="Login" method="post">
            <div class="form-group">
                <label for="login">Логин</label>
                <input type="text" class="form-control" id="login" name="login" asp-for="@Model.Login">
            </div>
            <div class="form-group">
                <label for="password">Пароль</label>
                <input type="password" class="form-control" id="password" name="password" asp-for="@Model.Password">
            </div>
            <button type="submit" class="btn btn-primary">Войти</button>
        </form>
    </div>
</div>