@model FoodService.Models.ViewModels.RegisterModel
<link rel="stylesheet" href="~/css/account.css" />
<div class="d-flex justify-content-center">
    <div class="col-lg-6">
        @if(ViewBag.IsValidationErrors)
        {
            <div class="alert alert-danger">
                @Html.ValidationSummary()
            </div>
        }
        <form asp-controller="Account" asp-action="Register" method="post">
            <div class="form-group">
                <label for="login">Логин</label>
                <input type="text" class="form-control" id="login" asp-for="@Model.Login">
            </div>
            <div class="form-group">
                <label for="email">Адрес электронной почты</label>
                <input type="email" class="form-control" id="email" asp-for="@Model.Email">
            </div>
            <div class="form-group">
                <label for="password">Пароль</label>
                <input type="password" class="form-control" id="password" asp-for="@Model.Password">
            </div>
            <div class="form-group">
                <label for="passwordRepeat">Повторите пароль</label>
                <input type="password" class="form-control" id="passwordConfirm" asp-for="@Model.PasswordConfirm">
            </div>
            <button type="submit" class="btn btn-primary">Зарегистрироваться</button>
        </form>
    </div>
</div>