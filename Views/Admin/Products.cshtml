@model IEnumerable<FoodService.Models.DbEntities.Product>
@{
    Layout = "_AdminLayout";
    ViewBag.Title = "Товары";

    string error = FoodService.Utils.MessageUtils.PopError(TempData);
}
@if (error != null)
{
    <div class="alert alert-danger">@error</div>
}

<div class="d-flex flex-row">
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addProductModal">Добавить товар</button>
</div>

<table class="table table-sm mt-2">
    <thead>
        <tr>
            <th>#</th>
            <th>Название</th>
            <th>Описание</th>
            <th width="250px">Действия</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th scope='row'>Бубу</th>
            <td>Бубу</td>
            <td>Бубу</td>
            <td>
                <div class="row ml-auto">
                    <button class="btn btn-sm btn-danger" type="button" aria-expanded="false">Удалить</button>
                    <button class="btn btn-sm btn-secondary" type="button" aria-expanded="false">Изменить</button>
                </div>
            </td>
        </tr>
    </tbody>
</table>

<!-- Modal -->
<div class="modal fade" id="addProductModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Добавление товара</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary">Добавить</button>
            </div>
        </div>
    </div>
</div>